        }

        async function announceLineup() {
            const checkboxes = document.querySelectorAll('#lineupPlayers input[type="checkbox"]:checked');
            
            if (checkboxes.length === 0) {
                showError('Please select at least one player');
                return;
            }
            
            const roster = selectedTeam === 'home' ? homeTeamRoster : awayTeamRoster;
            const teamName = selectedTeam === 'home' ? homeTeamName : awayTeamName;
            
            const selectedPlayers = Array.from(checkboxes).map(cb => ({
                number: cb.value,
                name: roster[cb.value]
            })).sort((a, b) => parseInt(a.number) - parseInt(b.number));
            
            if (selectedTeam === 'away') {
                let announcement = `Starting lineup for ${teamName}: `;
                announcement += selectedPlayers.map(p => `number ${p.number}, ${p.name}`).join(' and ');
                speak(announcement);
            } else {
                await playHomeLineupAnnouncement(selectedPlayers);
            }
            
            closeAnnouncementModal();
        }

        async function playHomeLineupAnnouncement(players) {
            try {
                await playAudioFile('Starting Lineup.mp3');
                
                for (let i = 0; i < players.length; i++) {
                    await playAudioFile(`${players[i].number}.mp3`);
                    
                    if (i < players.length - 1) {
                        await playAudioFile('And.mp3');
                    }
                }
            } catch (error) {
                console.error('Error playing home lineup announcement:', error);
                showError('Error playing lineup announcement audio files');
            }
        }

        function playAudioFile(filename) {
            return new Promise((resolve, reject) => {
                const audio = new Audio(`/audio/${filename}`);
                audio.volume = 0.8;
                
                audio.onended = () => {
                    setTimeout(resolve, 200);
                };
                
                audio.onerror = () => {
                    console.warn(`Audio file not found: ${filename}`);
                    resolve();
                };
                
                audio.play().catch(err => {
                    console.warn(`Error playing ${filename}:`, err);
                    resolve();
                });
            });
        }

        function speak(text) {
            if (!speechSynthesis) {
                showError('Speech synthesis not supported in this browser');
                return;
            }
            
            speechSynthesis.cancel();
            
            const utterance = new SpeechSynthesisUtterance(text);
            utterance.rate = 0.9;
            utterance.pitch = 1.0;
            utterance.volume = 0.8;
            
            speechSynthesis.speak(utterance);
        }

        window.onclick = function(event) {
            const modal = document.getElementById('announcementModal');
            if (event.target === modal) {
                closeAnnouncementModal();
            }
        }
    </script>
