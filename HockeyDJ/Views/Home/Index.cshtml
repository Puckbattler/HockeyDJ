                                console.warn(`Song ${selectedValue} not available in playlist (only ${tracks.length} songs). Playing random song instead.`);
                                
                                // Filter out already played tracks for fallback
                                let availableTracks = tracks.filter(track => !playedSongs.has(track.id));
                                if (availableTracks.length === 0) {
                                    playedSongs.clear();
                                    availableTracks = tracks;
                                }
                                selectedTrack = availableTracks[Math.floor(Math.random() * availableTracks.length)];
                                showError(`Song ${selectedValue} not available in playlist. Playing random song instead.`);
                                // Fallback to random selection ignores custom timestamps
