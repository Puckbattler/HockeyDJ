@{
ViewData["Title"] = "HockeyDJ Setup";
}

<!DOCTYPE html>
<html>

<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: white;
            margin: 0;
            padding: 20px;
            min-height: 100vh;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 40px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
        }

        .header h1 {
            font-size: 2.5em;
            margin: 0;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            background: linear-gradient(45deg, #ff6b35, #f7931e);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #ff6b35;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.1);
            color: white;
            font-size: 16px;
            box-sizing: border-box;
        }

        .form-control:focus {
            outline: none;
            border-color: #ff6b35;
            box-shadow: 0 0 10px rgba(255, 107, 53, 0.3);
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.6);
        }

        textarea.form-control {
            height: 120px;
            resize: vertical;
        }

        .btn {
            background: linear-gradient(45deg, #28a745, #20c997);
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            width: 100%;
            transition: all 0.3s ease;
        }

        .btn:hover {
            background: linear-gradient(45deg, #218838, #1ba085);
            transform: translateY(-2px);
        }

        .btn-secondary {
            background: linear-gradient(45deg, #6c757d, #5a6268);
            margin-bottom: 10px;
        }

        .btn-secondary:hover {
            background: linear-gradient(45deg, #545b62, #4e555b);
        }

        .btn-warning {
            background: linear-gradient(45deg, #ffc107, #e0a800);
            color: #212529;
        }

        .btn-warning:hover {
            background: linear-gradient(45deg, #e0a800, #d39e00);
        }

        .btn-group {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
            margin-bottom: 20px;
        }

        .instructions {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
            border-left: 4px solid #ff6b35;
        }

        .instructions h3 {
            margin-top: 0;
            color: #ff6b35;
        }

        .instructions ol {
            padding-left: 20px;
        }

        .instructions li {
            margin-bottom: 10px;
            line-height: 1.5;
        }

        .error {
            background: rgba(220, 53, 69, 0.2);
            border: 1px solid #dc3545;
            border-radius: 8px;
            padding: 15px;
            margin: 20px 0;
            text-align: center;
        }

        .success {
            background: rgba(40, 167, 69, 0.2);
            border: 1px solid #28a745;
            border-radius: 8px;
            padding: 15px;
            margin: 20px 0;
            text-align: center;
            color: #d4edda;
        }

        .code {
            background: rgba(0, 0, 0, 0.3);
            padding: 4px 8px;
            border-radius: 4px;
            font-family: 'Courier New', monospace;
            font-size: 14px;
        }

        .goal-horn-section {
            background: rgba(255, 107, 53, 0.1);
            border: 1px solid rgba(255, 107, 53, 0.3);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 25px;
        }

        .goal-horn-section h4 {
            color: #ff6b35;
            margin-top: 0;
            font-size: 1.3em;
        }

        .stats-mode-section {
            background: rgba(40, 167, 69, 0.1);
            border: 1px solid rgba(40, 167, 69, 0.3);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 25px;
        }

        .stats-mode-section h4 {
            color: #28a745;
            margin-top: 0;
            font-size: 1.3em;
        }

        .toggle-switch {
            position: relative;
            display: inline-flex;
            align-items: center;
            gap: 15px;
        }

        .toggle-switch input[type="checkbox"] {
            position: relative;
            width: 60px;
            height: 30px;
            appearance: none;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 15px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .toggle-switch input[type="checkbox"]::before {
            content: '';
            position: absolute;
            top: 3px;
            left: 3px;
            width: 24px;
            height: 24px;
            background: white;
            border-radius: 50%;
            transition: left 0.3s ease;
        }

        .toggle-switch input[type="checkbox"]:checked {
            background: #28a745;
        }

        .toggle-switch input[type="checkbox"]:checked::before {
            left: 33px;
        }

        .toggle-label {
            font-weight: bold;
            color: white;
        }

        .stats-playlists-section {
            display: none;
            background: rgba(138, 43, 226, 0.1);
            border: 1px solid rgba(138, 43, 226, 0.3);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 25px;
        }

        .stats-playlists-section.visible {
            display: block;
        }

        .stats-playlists-section h4 {
            color: #ba55d3;
            margin-top: 0;
            font-size: 1.3em;
        }

        .playlist-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 15px;
        }

        .config-tools {
            background: rgba(138, 43, 226, 0.1);
            border: 1px solid rgba(138, 43, 226, 0.3);
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 25px;
        }

        .config-tools h4 {
            color: #ba55d3;
            margin-top: 0;
            font-size: 1.3em;
        }

        #importFile {
            display: none;
        }

        .file-input-wrapper {
            position: relative;
            overflow: hidden;
            display: inline-block;
            width: 100%;
        }

        .file-input-wrapper input[type=file] {
            position: absolute;
            left: -9999px;
        }

        .file-input-wrapper .file-input-button {
            background: linear-gradient(45deg, #17a2b8, #138496);
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            width: 100%;
            transition: all 0.3s ease;
            display: block;
            text-align: center;
        }

        .file-input-wrapper .file-input-button:hover {
            background: linear-gradient(45deg, #138496, #0f6674);
            transform: translateY(-2px);
        }

        .selected-file {
            margin-top: 10px;
            padding: 10px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 5px;
            font-size: 14px;
            color: #b8daff;
        }

        .divider {
            border-top: 2px solid rgba(255, 255, 255, 0.2);
            margin: 30px 0;
            position: relative;
        }

        .divider::after {
            content: "OR";
            position: absolute;
            top: -12px;
            left: 50%;
            transform: translateX(-50%);
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            padding: 0 15px;
            color: rgba(255, 255, 255, 0.7);
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1>üèí HockeyDJ Setup</h1>
            <p>Configure your Spotify connection and playlists</p>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
        <div class="error">@ViewBag.Error</div>
        }

        @if (!string.IsNullOrEmpty(ViewBag.Success))
        {
        <div class="success">@ViewBag.Success</div>
        }

        <div class="config-tools">
            <h4>üîß Configuration Tools</h4>
            <div class="btn-group">
                <button type="button" class="btn btn-warning" onclick="exportConfiguration()">
                    üì§ Export Configuration
                </button>
                <div class="file-input-wrapper">
                    <input type="file" id="importFile" accept=".json" onchange="importConfiguration(this)" />
                    <label for="importFile" class="file-input-button">
                        üì• Import Configuration
                    </label>
                </div>
            </div>
            <div id="selectedFileDisplay" class="selected-file" style="display: none;"></div>
            <p style="font-size: 14px; color: rgba(255,255,255,0.7); margin: 10px 0 0 0;">
                üí° Save your configuration to easily restore settings or share with other devices.
            </p>
        </div>

        <div class="divider"></div>

        <div class="instructions">
            <h3>Setup Instructions</h3>
            <ol>
                <li>Go to <a href="https://developer.spotify.com/dashboard" target="_blank"
                        style="color: #ff6b35;">Spotify Developer Dashboard</a></li>
                <li>Create a new app or use an existing one</li>
                <li>Add your redirect URI to the app settings (e.g., <span
                        class="code">https://localhost:7001/Home/SpotifyCallback</span>)</li>
                <li>Copy your Client ID and Client Secret</li>
                <li>
                    Add your sound files to <span class="code">wwwroot/audio/</span>:
                    <ul style="margin-top: 5px;">
                        <li><span class="code">goal-horn.mp3</span> - Goal celebration sound</li>
                        <li><span class="code">mushroom.mp3</span> - Even Strength (Extra Life) sound</li>
                        <li><span class="code">clock.mp3</span> - One Minute Remaining Sound</li>
                    </ul>
                </li>
                <li>Paste your Spotify playlist URLs below</li>
                <li>Make sure you have Spotify Premium (required for playback control)</li>
            </ol>
        </div>

        <form method="post" action="/Home/SaveSpotifyConfig" id="configForm">
            @Html.AntiForgeryToken()

            <div class="stats-mode-section">
                <h4>üìä Stats Tracking Mode üìä</h4>
                <div class="toggle-switch">
                    <input type="checkbox" id="statsMode" name="statsMode" value="true" />
                    <input type="hidden" id="statsModeHidden" name="statsMode" value="false" />
                    <span class="toggle-label">Enable Stats Tracking Mode</span>
                </div>
                <small style="color: rgba(255,255,255,0.7); font-size: 14px; margin-top: 10px; display: block;">
                    üìã When enabled, HockeyDJ will show a Gamesheet-style scoring interface with a live game clock, 
                    period tracking, goal/penalty recording, and game statistics. The original music controls will still be available.
                </small>
            </div>

            <div class="form-group">
                <label for="clientId">Spotify Client ID</label>
                <input type="text" id="clientId" name="clientId" class="form-control"
                    placeholder="Your Spotify App Client ID" required />
            </div>

            <div class="form-group">
                <label for="clientSecret">Spotify Client Secret</label>
                <input type="text" id="clientSecret" name="clientSecret" class="form-control"
                    placeholder="Your Spotify App Client Secret" required />
            </div>

            <div class="form-group">
                <label for="redirectUri">Redirect URI</label>
                <input type="url" id="redirectUri" name="redirectUri" class="form-control"
                    placeholder="https://127.0.0.1:7001/Home/SpotifyCallback"
                    value="https://127.0.0.1:7001/Home/SpotifyCallback" required />
            </div>

            <div class="goal-horn-section">
                <h4>üö® Goal Horn Configuration üö®</h4>
                <div class="form-group">
                    <label for="goalHornPlaylist">Goal Celebration Playlist URL</label>
                    <input type="url" id="goalHornPlaylist" name="goalHornPlaylist" class="form-control"
                        placeholder="https://open.spotify.com/playlist/your-goal-celebration-playlist" />
                    <small style="color: rgba(255,255,255,0.7); font-size: 14px; margin-top: 5px; display: block;">
                        üéµ This playlist will play victory songs after the goal horn sound. Leave empty to use the first
                        playlist below.
                    </small>
                </div>
                <div class="form-group">
                    <label for="songStartTimestamps">Song Start Timestamps (Player Number:Timestamp, one per line)</label>
                    <textarea id="songStartTimestamps" name="songStartTimestamps" class="form-control"
                        placeholder="4:0:45&#10;7:1:30&#10;9:0:15"
                        style="height: 120px;"></textarea>
                    <small style="color: rgba(255,255,255,0.7); font-size: 14px; margin-top: 5px; display: block;">
                        ‚è±Ô∏è Format: PlayerNumber:Minutes:Seconds (e.g., "4:1:30" means player 4's song starts at 1 minute 30 seconds).<br>
                        When you select a player number before triggering the goal horn, their song will start at this timestamp. Leave blank to start songs from the beginning.
                    </small>
                </div>
            </div>

            <div class="goal-horn-section">
                <h4>üèí Team Roster Configuration üèí</h4>
                <div class="form-group">
                    <label for="homeTeamName">Home Team Name</label>
                    <input type="text" id="homeTeamName" name="homeTeamName" class="form-control"
                        placeholder="e.g., Lightning, Maple Leafs" />
                </div>
                <div class="form-group">
                    <label for="homeTeamRoster">Home Team Roster (Number:Name, one per line)</label>
                    <textarea id="homeTeamRoster" name="homeTeamRoster" class="form-control"
                        placeholder="1:John Smith&#10;4:Mike Johnson&#10;7:Chris Williams&#10;8:Dave Brown&#10;9:Tom Davis"
                        style="height: 150px;"></textarea>
                    <small style="color: rgba(255,255,255,0.7); font-size: 14px; margin-top: 5px; display: block;">
                        üìù Format: Number:Name (e.g., "7:Connor McDavid")
                    </small>
                </div>
                <div class="form-group">
                    <label for="awayTeamName">Away Team Name</label>
                    <input type="text" id="awayTeamName" name="awayTeamName" class="form-control"
                        placeholder="e.g., Bruins, Rangers" />
                </div>
                <div class="form-group">
                    <label for="awayTeamRoster">Away Team Roster (Number:Name, one per line)</label>
                    <textarea id="awayTeamRoster" name="awayTeamRoster" class="form-control"
                        placeholder="10:Alex Parker&#10;15:Brad Wilson&#10;16:Steve Miller&#10;17:Rob Taylor&#10;18:Joe Anderson"
                        style="height: 150px;"></textarea>
                    <small style="color: rgba(255,255,255,0.7); font-size: 14px; margin-top: 5px; display: block;">
                        üìù Format: Number:Name (e.g., "97:Connor McDavid")
                    </small>
                </div>
            </div>

            <div id="statsPlaylistsSection" class="stats-playlists-section">
                <h4>üéµ Stats Mode Playlists üéµ</h4>
                <small style="color: rgba(255,255,255,0.7); font-size: 14px; margin-bottom: 15px; display: block;">
                    Configure playlists for different game situations. These will play automatically when you select a situation after stopping the clock.
                </small>
                <div class="playlist-grid">
                    <div class="form-group">
                        <label for="offsidePlaylist">Offside Playlist URL</label>
                        <input type="url" id="offsidePlaylist" name="offsidePlaylist" class="form-control"
                            placeholder="https://open.spotify.com/playlist/..." />
                    </div>
                    <div class="form-group">
                        <label for="icingPlaylist">Icing Playlist URL</label>
                        <input type="url" id="icingPlaylist" name="icingPlaylist" class="form-control"
                            placeholder="https://open.spotify.com/playlist/..." />
                    </div>
                    <div class="form-group">
                        <label for="awayGoalPlaylist">Away Goal Playlist URL</label>
                        <input type="url" id="awayGoalPlaylist" name="awayGoalPlaylist" class="form-control"
                            placeholder="https://open.spotify.com/playlist/..." />
                    </div>
                    <div class="form-group">
                        <label for="comebackPlaylist">Comeback Playlist URL</label>
                        <input type="url" id="comebackPlaylist" name="comebackPlaylist" class="form-control"
                            placeholder="https://open.spotify.com/playlist/..." />
                    </div>
                    <div class="form-group">
                        <label for="hopePlaylist">Hope Playlist URL</label>
                        <input type="url" id="hopePlaylist" name="hopePlaylist" class="form-control"
                            placeholder="https://open.spotify.com/playlist/..." />
                    </div>
                    <div class="form-group">
                        <label for="endZonePlaylist">End Zone Playlist URL</label>
                        <input type="url" id="endZonePlaylist" name="endZonePlaylist" class="form-control"
                            placeholder="https://open.spotify.com/playlist/..." />
                    </div>
                    <div class="form-group">
                        <label for="penaltyPlaylist">Penalty Playlist URL</label>
                        <input type="url" id="penaltyPlaylist" name="penaltyPlaylist" class="form-control"
                            placeholder="https://open.spotify.com/playlist/..." />
                    </div>
                    <div class="form-group">
                        <label for="warmUpPlaylist">Warm-Up Playlist URL</label>
                        <input type="url" id="warmUpPlaylist" name="warmUpPlaylist" class="form-control"
                            placeholder="https://open.spotify.com/playlist/..." />
                    </div>
                    <div class="form-group">
                        <label for="intermissionPlaylist">Intermission Playlist URL</label>
                        <input type="url" id="intermissionPlaylist" name="intermissionPlaylist" class="form-control"
                            placeholder="https://open.spotify.com/playlist/..." />
                    </div>
                    <div class="form-group">
                        <label for="postGamePlaylist">Post-Game Playlist URL</label>
                        <input type="url" id="postGamePlaylist" name="postGamePlaylist" class="form-control"
                            placeholder="https://open.spotify.com/playlist/..." />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="playlistUrls">Spotify Playlist URLs (up to 10, one per line)</label>
                <textarea id="playlistUrls" name="playlistUrls" class="form-control"
                    placeholder="https://open.spotify.com/playlist/20ObIj4drcpqU4a4ZQPWNU?si=Y8kcaUGxRD6eov5JXfqzmQ&pi=DoFqrvE4RQm6q&#10;https://open.spotify.com/playlist/0Koymm18OCvJcecMXx7TWp?si=ofxcgkaDR8yYRw0wyhQMzw&pi=Hr6_KlG9QbmU0"
                    required></textarea>
                <small style="color: rgba(255,255,255,0.7); font-size: 14px;">
                    Tip: Right-click any Spotify playlist ‚Üí "Share" ‚Üí "Copy link" to get the URL
                </small>
            </div>

            <button type="submit" class="btn">Connect to Spotify & Start HockeyDJ</button>
        </form>
    </div>

    <script>
        // Stats mode toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const statsModeCheckbox = document.getElementById('statsMode');
            const statsModeHidden = document.getElementById('statsModeHidden');
            const statsPlaylistsSection = document.getElementById('statsPlaylistsSection');
            
            function toggleStatsMode() {
                if (statsModeCheckbox.checked) {
                    statsPlaylistsSection.classList.add('visible');
                    statsModeHidden.disabled = true;
                } else {
                    statsPlaylistsSection.classList.remove('visible');
                    statsModeHidden.disabled = false;
                }
            }
            
            statsModeCheckbox.addEventListener('change', toggleStatsMode);
            
            // Initialize on page load
            toggleStatsMode();
        });

        function exportConfiguration() {
            // Gather all configuration data
            const config = {
                clientId: document.getElementById('clientId').value,
                clientSecret: document.getElementById('clientSecret').value,
                redirectUri: document.getElementById('redirectUri').value,
                goalHornPlaylist: document.getElementById('goalHornPlaylist').value,
                playlistUrls: document.getElementById('playlistUrls').value,
                homeTeamName: document.getElementById('homeTeamName').value,
                homeTeamRoster: document.getElementById('homeTeamRoster').value,
                awayTeamName: document.getElementById('awayTeamName').value,
                awayTeamRoster: document.getElementById('awayTeamRoster').value,
                songStartTimestamps: document.getElementById('songStartTimestamps').value,
                statsMode: document.getElementById('statsMode').checked,
                offsidePlaylist: document.getElementById('offsidePlaylist').value,
                icingPlaylist: document.getElementById('icingPlaylist').value,
                awayGoalPlaylist: document.getElementById('awayGoalPlaylist').value,
                comebackPlaylist: document.getElementById('comebackPlaylist').value,
                hopePlaylist: document.getElementById('hopePlaylist').value,
                endZonePlaylist: document.getElementById('endZonePlaylist').value,
                penaltyPlaylist: document.getElementById('penaltyPlaylist').value,
                warmUpPlaylist: document.getElementById('warmUpPlaylist').value,
                intermissionPlaylist: document.getElementById('intermissionPlaylist').value,
                postGamePlaylist: document.getElementById('postGamePlaylist').value,
                exportDate: new Date().toISOString(),
                version: "1.4.0"
            };

            // Create and download the file
            const dataStr = JSON.stringify(config, null, 2);
            const dataUri = 'data:application/json;charset=utf-8,' + encodeURIComponent(dataStr);

            const exportFileDefaultName = 'hockeydj-config-' + new Date().toISOString().split('T')[0] + '.json';

            const linkElement = document.createElement('a');
            linkElement.setAttribute('href', dataUri);
            linkElement.setAttribute('download', exportFileDefaultName);
            linkElement.click();
            linkElement.remove();
        }

        function importConfiguration(input) {
            const file = input.files[0];
            if (!file) return;

            // Display selected file name
            const fileDisplay = document.getElementById('selectedFileDisplay');
            fileDisplay.textContent = `Selected: ${file.name}`;
            fileDisplay.style.display = 'block';

            const reader = new FileReader();
            reader.onload = function (e) {
                try {
                    const configData = e.target.result;

                    // Send to server for processing and validation
                    fetch('/Home/ImportConfiguration', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: JSON.stringify({configData: configData})
                    })
                        .then(response => response.json())
                        .then(result => {
                            if (result.success) {
                                // Populate the form fields with validated data
                                const config = result.config;

                                if (config.clientId) {
                                    document.getElementById('clientId').value = config.clientId;
                                }
                                if (config.clientSecret) {
                                    document.getElementById('clientSecret').value  = config.clientSecret;
                                }
                                if (config.redirectUri) {
                                    document.getElementById('redirectUri').value = config.redirectUri;
                                }
                                if (config.goalHornPlaylist) {
                                    document.getElementById('goalHornPlaylist').value = config.goalHornPlaylist;
                                }
                                if (config.playlistUrls) {
                                    document.getElementById('playlistUrls').value = config.playlistUrls;
                                }
                                if (config.homeTeamName) {
                                    document.getElementById('homeTeamName').value = config.homeTeamName;
                                }
                                if (config.homeTeamRoster) {
                                    document.getElementById('homeTeamRoster').value = config.homeTeamRoster;
                                }
                                if (config.awayTeamName) {
                                    document.getElementById('awayTeamName').value = config.awayTeamName;
                                }
                                if (config.awayTeamRoster) {
                                    document.getElementById('awayTeamRoster').value = config.awayTeamRoster;
                                }
                                if (config.songStartTimestamps) {
                                    document.getElementById('songStartTimestamps').value = config.songStartTimestamps;
                                }
                                
                                // Stats mode settings
                                if (config.statsMode) {
                                    document.getElementById('statsMode').checked = config.statsMode;
                                    document.getElementById('statsPlaylistsSection').classList.add('visible');
                                    document.getElementById('statsModeHidden').disabled = true;
                                }
                                if (config.offsidePlaylist) {
                                    document.getElementById('offsidePlaylist').value = config.offsidePlaylist;
                                }
