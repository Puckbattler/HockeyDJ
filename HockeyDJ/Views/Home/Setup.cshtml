        function addPlayerHornRow(playerNum, hornPath) {
            const list = document.getElementById('player-horn-list');
            const row = document.createElement('div');
            row.style.cssText = 'display: flex; gap: 10px; align-items: center; margin-bottom: 8px;';

            const roster = document.getElementById('homeTeamRoster');
            const rosterText = roster ? roster.value : '';
            const players = rosterText.split('\n').filter(l => l.trim()).map(l => {
                const parts = l.split(':');
                return { number: parts[0]?.trim(), name: parts.slice(1).join(':')?.trim() };
            });

            let playerOptions = '<option value="">Select Player</option>';
            players.forEach(p => {
                const selected = (playerNum && p.number === playerNum) ? 'selected' : '';
                playerOptions += `<option value="${p.number}" ${selected}>#${p.number} ${p.name || ''}</option>`;
            });

            const hornValue = hornPath || '/audio/goal-horn.mp3';

            row.innerHTML = `
                <select class="form-control player-horn-player" style="flex: 1;">${playerOptions}</select>
                <select class="form-control player-horn-path" style="flex: 1;">
                    <option value="/audio/goal-horn.mp3" ${hornValue === '/audio/goal-horn.mp3' ? 'selected' : ''}>Standard Horn</option>
                    <option value="/audio/Sad Trombone.mp3" ${hornValue === '/audio/Sad Trombone.mp3' ? 'selected' : ''}>Sad Trombone</option>
