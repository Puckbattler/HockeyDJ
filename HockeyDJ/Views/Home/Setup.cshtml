                alert('No horn selected to preview');
                return;
            }

            if (hornPreviewAudio) {
                hornPreviewAudio.pause();
                hornPreviewAudio.currentTime = 0;
            }
            hornPreviewAudio = new Audio(hornPath);
            hornPreviewAudio.volume = 0.8;
            hornPreviewAudio.play().catch(err => {
                console.warn('Could not play horn preview:', err);
                alert('Could not play horn preview. File may not be available.');
