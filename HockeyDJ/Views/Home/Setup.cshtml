        function previewHorn(type) {
            let hornPath = '';
            switch (type) {
                case 'default':
                    hornPath = document.getElementById('default-horn').value;
                    break;
                case 'overtime':
                    hornPath = document.getElementById('overtime-horn').value || document.getElementById('default-horn').value;
                    break;
