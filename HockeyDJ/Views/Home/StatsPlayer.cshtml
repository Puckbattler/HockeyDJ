@{
ViewData["Title"] = "HockeyDJ Stats Mode";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        * { box-sizing: border-box; margin: 0; padding: 0; }
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: white;
            min-height: 100vh;
        }
        .stats-container { max-width: 1400px; margin: 0 auto; padding: 15px; }
        .header { text-align: center; margin-bottom: 20px; }
        .header h1 {
            font-size: 2em;
            background: linear-gradient(45deg, #ff6b35, #f7931e);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        .setup-link {
            position: fixed; top: 15px; right: 15px;
            background: rgba(255, 255, 255, 0.2);
            padding: 8px 16px; border-radius: 8px;
            text-decoration: none; color: white;
            border: 1px solid rgba(255, 255, 255, 0.3);
            z-index: 1000;
        }
        .setup-link:hover { background: rgba(255, 255, 255, 0.3); }

        /* Scoreboard */
        .scoreboard {
            background: rgba(0, 0, 0, 0.5);
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 20px;
            display: grid;
            grid-template-columns: 1fr auto 1fr;
            gap: 20px;
            align-items: center;
        }
        .team-section { text-align: center; }
        .team-name { font-size: 1.5em; font-weight: bold; margin-bottom: 10px; }
        .team-score {
            font-size: 4em; font-weight: bold;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 10px 30px;
            min-width: 120px;
            display: inline-block;
        }
        .home-team .team-score { color: #ff6b35; }
        .away-team .team-score { color: #6495ED; }

        /* Game Clock */
        .clock-section { text-align: center; }
        .period-display {
            font-size: 1.2em;
            margin-bottom: 10px;
            color: #ffc107;
        }
        .game-clock {
            font-size: 3.5em;
            font-weight: bold;
            font-family: 'Courier New', monospace;
            background: rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            padding: 15px 25px;
            margin-bottom: 15px;
            border: 3px solid #ffc107;
        }
        .clock-controls { display: flex; gap: 10px; justify-content: center; flex-wrap: wrap; }
        .clock-btn {
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .btn-start { background: linear-gradient(45deg, #28a745, #20c997); color: white; }
        .btn-stop { background: linear-gradient(45deg, #dc3545, #fd7e14); color: white; }
        .btn-reset { background: linear-gradient(45deg, #6c757d, #5a6268); color: white; }
        .btn-period { background: linear-gradient(45deg, #ffc107, #e0a800); color: #212529; }
        .clock-btn:hover { transform: translateY(-2px); }
        .clock-btn:disabled { opacity: 0.6; cursor: not-allowed; transform: none; }

        /* Penalty Timers */
        .penalty-timers {
            display: flex;
            justify-content: space-between;
            gap: 20px;
            margin-bottom: 20px;
        }
        .penalty-box {
            flex: 1;
            background: rgba(220, 53, 69, 0.2);
            border: 2px solid #dc3545;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
        }
        .penalty-box h4 { color: #dc3545; margin-bottom: 10px; }
        .penalty-timer {
            font-size: 1.5em;
            font-family: 'Courier New', monospace;
            color: #dc3545;
        }
        .penalty-player { font-size: 0.9em; color: rgba(255,255,255,0.7); }

        /* Action Buttons */
        .action-section {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 20px;
        }
        .action-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
            gap: 10px;
        }
        .action-btn {
            padding: 15px;
            border: none;
            border-radius: 10px;
            font-size: 14px;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: center;
        }
        .action-btn:hover { transform: translateY(-2px); }
        .btn-home-goal { background: linear-gradient(45deg, #ff6b35, #f7931e); color: white; }
        .btn-away-goal { background: linear-gradient(45deg, #6495ED, #4169E1); color: white; }
        .btn-penalty { background: linear-gradient(45deg, #dc3545, #c82333); color: white; }
        .btn-offside { background: linear-gradient(45deg, #17a2b8, #138496); color: white; }
        .btn-icing { background: linear-gradient(45deg, #e0e0e0, #bdbdbd); color: #333; }
        .btn-faceoff { background: linear-gradient(45deg, #9c27b0, #7b1fa2); color: white; }

        /* Sound Buttons */
        .sound-section {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 20px;
        }
        .sound-grid {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
        }
        .sound-btn {
            width: 60px; height: 60px;
            border-radius: 50%;
            border: none;
            font-size: 24px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .sound-btn:hover { transform: scale(1.1); }
        .goal-horn-btn { background: linear-gradient(45deg, #ff6b35, #f7931e); }
        .mushroom-btn { background: radial-gradient(circle at 30% 30%, #ff4444, #cc0000); border: 2px solid white; }
        .clock-sound-btn { background: linear-gradient(45deg, #2196F3, #1976D2); }

        /* Game Log */
        .game-log {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 20px;
            max-height: 300px;
            overflow-y: auto;
        }
        .game-log h3 { color: #ff6b35; margin-bottom: 15px; }
        .log-entry {
            padding: 10px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            display: flex;
            justify-content: space-between;
        }
        .log-time { color: #ffc107; font-family: monospace; }
        .log-event { flex: 1; margin-left: 15px; }

        /* Modal */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0; top: 0;
            width: 100%; height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
        }
        .modal-content {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            margin: 5% auto;
            padding: 30px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 20px;
            width: 90%;
            max-width: 500px;
            max-height: 80vh;
            overflow-y: auto;
        }
        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            border-bottom: 2px solid rgba(255,255,255,0.2);
            padding-bottom: 15px;
        }
        .modal-header h2 { color: #ff6b35; margin: 0; }
        .close { color: white; font-size: 28px; cursor: pointer; }
        .close:hover { color: #ff6b35; }
        .form-group { margin-bottom: 20px; }
        .form-group label { display: block; margin-bottom: 8px; color: #ff6b35; font-weight: bold; }
        .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid rgba(255,255,255,0.3);
            border-radius: 8px;
            background: rgba(255,255,255,0.1);
            color: white;
            font-size: 16px;
        }
        .form-control option { background: #1e3c72; }
        .submit-btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(45deg, #28a745, #20c997);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
        }
        .submit-btn:hover { background: linear-gradient(45deg, #218838, #1ba085); }

        /* Player Selection Grid */
        .player-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
            gap: 8px;
            max-height: 200px;
            overflow-y: auto;
            padding: 10px;
            background: rgba(0,0,0,0.2);
            border-radius: 8px;
        }
        .player-btn {
            padding: 10px;
            border: 2px solid rgba(255,255,255,0.3);
            border-radius: 8px;
            background: rgba(255,255,255,0.1);
            color: white;
            cursor: pointer;
            text-align: center;
            font-size: 12px;
        }
        .player-btn:hover { background: rgba(255,107,53,0.3); border-color: #ff6b35; }
        .player-btn.selected { background: rgba(255,107,53,0.5); border-color: #ff6b35; }

        /* Priority Queue */
        .priority-queue-section {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 20px;
            margin-top: 20px;
        }
        .priority-queue-header h3 { color: #ff6b35; margin-bottom: 15px; }
        .search-section { display: flex; gap: 10px; margin-bottom: 15px; }
        .search-input {
            flex: 1;
            padding: 12px;
            border: 2px solid rgba(255,107,53,0.3);
            border-radius: 8px;
            background: rgba(255,255,255,0.1);
            color: white;
            font-size: 16px;
        }
        .search-btn {
            padding: 12px 24px;
            background: linear-gradient(45deg, #ff6b35, #f7931e);
            color: white;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
        }
        .queue-list { max-height: 200px; overflow-y: auto; }
        .queue-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        .remove-btn {
            background: rgba(220,53,69,0.3);
            color: #dc3545;
            border: 1px solid #dc3545;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        /* Export buttons */
        .export-section {
            display: flex;
            gap: 10px;
            justify-content: center;
            margin-top: 20px;
        }
        .export-btn {
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
        }
        .btn-export-json { background: linear-gradient(45deg, #17a2b8, #138496); color: white; }
        .btn-export-csv { background: linear-gradient(45deg, #28a745, #20c997); color: white; }

        @@media (max-width: 768px) {
            .scoreboard { grid-template-columns: 1fr; gap: 15px; }
            .team-score { font-size: 3em; }
            .game-clock { font-size: 2.5em; }
            .penalty-timers { flex-direction: column; }
        }
    </style>
</head>
<body>
    <a href="@Url.Action("Setup")" class="setup-link">‚öôÔ∏è Settings</a>

    <div class="stats-container">
        <div class="header">
            <h1>üèí HockeyDJ Stats Mode üìä</h1>
        </div>

        <!-- Scoreboard -->
        <div class="scoreboard">
            <div class="team-section home-team">
                <div class="team-name" id="homeTeamName">@ViewBag.HomeTeamName</div>
                <div class="team-score" id="homeScore">0</div>
            </div>
            <div class="clock-section">
                <div class="period-display" id="periodDisplay">Pre-Game Warm-Up</div>
                <div class="game-clock" id="gameClock">@ViewBag.WarmupLength:00</div>
                <div class="clock-controls">
                    <button class="clock-btn btn-start" id="startBtn" onclick="startClock()">‚ñ∂Ô∏è Start</button>
                    <button class="clock-btn btn-stop" id="stopBtn" onclick="stopClock()" disabled>‚èπÔ∏è Stop</button>
                    <button class="clock-btn btn-reset" onclick="resetClock()">üîÑ Reset</button>
                    <button class="clock-btn btn-period" onclick="nextPeriod()">‚û°Ô∏è Next Period</button>
                </div>
            </div>
            <div class="team-section away-team">
                <div class="team-name" id="awayTeamName">@ViewBag.AwayTeamName</div>
                <div class="team-score" id="awayScore">0</div>
            </div>
        </div>

        <!-- Penalty Timers -->
        <div class="penalty-timers">
            <div class="penalty-box" id="homePenaltyBox">
                <h4>Home Penalties</h4>
                <div id="homePenalties"></div>
            </div>
            <div class="penalty-box" id="awayPenaltyBox">
                <h4>Away Penalties</h4>
                <div id="awayPenalties"></div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="action-section">
            <div class="action-grid">
                <button class="action-btn btn-home-goal" onclick="recordGoal('home')">ü•Ö Home Goal</button>
                <button class="action-btn btn-away-goal" onclick="recordGoal('away')">ü•Ö Away Goal</button>
                <button class="action-btn btn-penalty" onclick="recordPenalty()">‚ö†Ô∏è Penalty</button>
                <button class="action-btn btn-offside" onclick="playSituation('offside')">üö© Offside</button>
                <button class="action-btn btn-icing" onclick="playSituation('icing')">‚ùÑÔ∏è Icing</button>
                <button class="action-btn btn-faceoff" onclick="recordFaceoff()">üèí Face-off</button>
            </div>
        </div>

        <!-- Sound Buttons -->
        <div class="sound-section">
            <div class="sound-grid">
                <button class="sound-btn goal-horn-btn" onclick="playGoalHorn()" title="Goal Horn">üìØ</button>
                <button class="sound-btn mushroom-btn" onclick="playMushroomSound()" title="Power Up">üçÑ</button>
                <button class="sound-btn clock-sound-btn" onclick="playClockSound()" title="One Minute">üïê</button>
                <button class="sound-btn" style="background: linear-gradient(45deg, #FFD700, #FFA500);" onclick="playTromboneSound()" title="Sad Trombone">üé∫</button>
            </div>
        </div>

        <!-- Game Log -->
        <div class="game-log">
            <h3>üìã Game Log</h3>
            <div id="gameLogEntries"></div>
        </div>

        <!-- Export Section -->
        <div class="export-section">
            <button class="export-btn btn-export-json" onclick="exportGame('json')">üì• Export JSON</button>
            <button class="export-btn btn-export-csv" onclick="exportGame('csv')">üìä Export CSV</button>
            <button class="export-btn btn-reset" onclick="resetGame()">üîÑ New Game</button>
        </div>

        <!-- Priority Queue -->
        <div class="priority-queue-section">
            <div class="priority-queue-header">
                <h3>üéØ Priority Queue</h3>
            </div>
            <div class="search-section">
                <input type="text" id="searchInput" class="search-input" placeholder="Search for songs..." />
                <button class="search-btn" onclick="searchSpotify()">üîç Search</button>
            </div>
            <div id="searchResults"></div>
            <div class="queue-list" id="queueList"></div>
        </div>
    </div>

    <!-- Goal Modal -->
    <div id="goalModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="goalModalTitle">ü•Ö Record Goal</h2>
                <span class="close" onclick="closeModal('goalModal')">&times;</span>
            </div>
            <div class="form-group">
                <label>Scoring Player:</label>
                <div class="player-grid" id="scorerGrid"></div>
            </div>
            <div class="form-group">
                <label>First Assist (Optional):</label>
                <div class="player-grid" id="assist1Grid"></div>
            </div>
            <div class="form-group">
                <label>Second Assist (Optional):</label>
                <div class="player-grid" id="assist2Grid"></div>
            </div>
            <div class="form-group">
                <label for="goalType">Goal Type:</label>
                <select id="goalType" class="form-control">
                    <option value="even">Even Strength</option>
                    <option value="pp">Power Play</option>
                    <option value="sh">Short Handed</option>
                    <option value="en">Empty Net</option>
                    <option value="ps">Penalty Shot</option>
                </select>
            </div>
            <button class="submit-btn" onclick="submitGoal()">‚úÖ Record Goal</button>
        </div>
    </div>

    <!-- Penalty Modal -->
    <div id="penaltyModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>‚ö†Ô∏è Record Penalty</h2>
                <span class="close" onclick="closeModal('penaltyModal')">&times;</span>
            </div>
            <div class="form-group">
                <label for="penaltyTeam">Team:</label>
                <select id="penaltyTeam" class="form-control" onchange="updatePenaltyPlayerGrid()">
                    <option value="home">@ViewBag.HomeTeamName</option>
                    <option value="away">@ViewBag.AwayTeamName</option>
                </select>
            </div>
            <div class="form-group">
                <label>Player:</label>
                <div class="player-grid" id="penaltyPlayerGrid"></div>
            </div>
            <div class="form-group">
                <label for="penaltyInfraction">Infraction:</label>
                <select id="penaltyInfraction" class="form-control">
                    <option value="Tripping">Tripping</option>
                    <option value="Hooking">Hooking</option>
                    <option value="Holding">Holding</option>
                    <option value="Slashing">Slashing</option>
                    <option value="Interference">Interference</option>
                    <option value="Cross-checking">Cross-checking</option>
                    <option value="Roughing">Roughing</option>
                    <option value="High-sticking">High-sticking</option>
                    <option value="Boarding">Boarding</option>
                    <option value="Delay of Game">Delay of Game</option>
                </select>
            </div>
            <div class="form-group">
                <label for="penaltyMinutes">Minutes:</label>
                <select id="penaltyMinutes" class="form-control">
                    <option value="2">2 Minutes (Minor)</option>
                    <option value="4">4 Minutes (Double Minor)</option>
                    <option value="5">5 Minutes (Major)</option>
                    <option value="10">10 Minutes (Misconduct)</option>
                </select>
            </div>
            <button class="submit-btn" onclick="submitPenalty()">‚úÖ Record Penalty</button>
        </div>
    </div>

    <!-- Faceoff Modal -->
    <div id="faceoffModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>üèí Face-off Winner</h2>
                <span class="close" onclick="closeModal('faceoffModal')">&times;</span>
            </div>
            <div class="form-group">
                <label for="faceoffWinner">Winning Team:</label>
                <select id="faceoffWinner" class="form-control" onchange="updateFaceoffPlayerGrid()">
                    <option value="home">@ViewBag.HomeTeamName</option>
                    <option value="away">@ViewBag.AwayTeamName</option>
                </select>
            </div>
            <div class="form-group">
                <label>Winning Player:</label>
                <div class="player-grid" id="faceoffPlayerGrid"></div>
            </div>
            <button class="submit-btn" onclick="submitFaceoff()">‚úÖ Record Face-off</button>
        </div>
    </div>

    <!-- Stoppage Modal -->
    <div id="stoppageModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>‚è∏Ô∏è Stoppage of Play</h2>
                <span class="close" onclick="closeModal('stoppageModal')">&times;</span>
            </div>
            <div class="action-grid">
                <button class="action-btn btn-home-goal" onclick="handleStoppage('homeGoal')">ü•Ö Home Goal</button>
                <button class="action-btn btn-away-goal" onclick="handleStoppage('awayGoal')">ü•Ö Away Goal</button>
                <button class="action-btn btn-penalty" onclick="handleStoppage('penalty')">‚ö†Ô∏è Penalty</button>
                <button class="action-btn btn-offside" onclick="handleStoppage('offside')">üö© Offside</button>
                <button class="action-btn btn-icing" onclick="handleStoppage('icing')">‚ùÑÔ∏è Icing</button>
                <button class="action-btn" style="background: linear-gradient(45deg, #6c757d, #5a6268); color: white;" onclick="handleStoppage('other')">üìã Other</button>
            </div>
        </div>
    </div>

    <script src="https://sdk.scdn.co/spotify-player.js"></script>
    <script>
        // Configuration
        let accessToken = '@ViewBag.AccessToken';
        let homeTeamName = '@ViewBag.HomeTeamName';
        let awayTeamName = '@ViewBag.AwayTeamName';
        let periodLength = parseInt('@ViewBag.PeriodLength') || 20;
        let numPeriods = parseInt('@ViewBag.NumPeriods') || 3;
        let warmupLength = parseInt('@ViewBag.WarmupLength') || 10;
        let intermissionLength = parseInt('@ViewBag.IntermissionLength') || 15;
        let goalHornPlaylistId = '@ViewBag.GoalHornPlaylistId';
        let penaltyPlaylistId = '@ViewBag.PenaltyPlaylistId';
        let priorityQueue = @Html.Raw(ViewBag.PriorityQueue ?? "[]");
        let songStartTimestamps = @Html.Raw(ViewBag.SongStartTimestampsJson ?? "{}");

        // Parse rosters
        let homeRoster = {};
        let awayRoster = {};
        const homeRosterStr = @Html.Raw(Json.Serialize(ViewBag.HomeTeamRoster ?? ""));
        const awayRosterStr = @Html.Raw(Json.Serialize(ViewBag.AwayTeamRoster ?? ""));
        
        function parseRoster(str) {
            const roster = {};
            if (str) {
                str.split('\n').forEach(line => {
                    const parts = line.trim().split(':');
                    if (parts.length === 2) {
                        roster[parts[0].trim()] = parts[1].trim();
                    }
                });
            }
            return roster;
        }
        homeRoster = parseRoster(homeRosterStr);
        awayRoster = parseRoster(awayRosterStr);

        // Game state
        let clockInterval = null;
        let clockSeconds = warmupLength * 60;
        let currentPeriod = 0; // 0 = warmup, 1-3 = periods, 4+ = intermissions
        let periodNames = ['Pre-Game Warm-Up'];
        for (let i = 1; i <= numPeriods; i++) {
            periodNames.push(`Period ${i}`);
            if (i < numPeriods) periodNames.push(`Intermission ${i}`);
        }
        periodNames.push('Post-Game');
        
        let homeScore = 0;
        let awayScore = 0;
        let gameLog = [];
        let penalties = { home: [], away: [] };
        let selectedScorer = null;
        let selectedAssist1 = null;
        let selectedAssist2 = null;
        let selectedPenaltyPlayer = null;
        let selectedFaceoffPlayer = null;
        let currentGoalTeam = null;

        // Audio
        let goalHornAudio = new Audio('/audio/goal-horn.mp3');
        let mushroomAudio = new Audio('/audio/mushroom.mp3');
        let clockAudio = new Audio('/audio/clock.mp3');
        let tromboneAudio = new Audio('/audio/Sad Trombone.mp3');
        let oneMinuteWarningPlayed = false;

        // Spotify Player
        let spotifyPlayer;
        let deviceId;
        let playlistTracks = {};

        window.onSpotifyWebPlaybackSDKReady = () => {
            spotifyPlayer = new Spotify.Player({
                name: 'HockeyDJ Stats Player',
                getOAuthToken: cb => { cb(accessToken); },
                volume: 0.8
            });
            spotifyPlayer.addListener('ready', ({ device_id }) => {
                deviceId = device_id;
                loadPlaylists();
            });
            spotifyPlayer.connect();
        };

        async function loadPlaylists() {
            const playlistIds = [goalHornPlaylistId, penaltyPlaylistId].filter(id => id);
            for (const id of playlistIds) {
                if (id) await loadPlaylistTracks(id);
            }
        }

        async function loadPlaylistTracks(playlistId) {
            try {
                const response = await fetch('/Home/GetPlaylistTracks', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `playlistId=${playlistId}`
                });
                const data = await response.json();
                if (data.success) playlistTracks[playlistId] = data.tracks;
            } catch (e) { console.error('Error loading playlist:', e); }
        }

        // Clock functions
        function formatTime(seconds) {
            const mins = Math.floor(seconds / 60);
            const secs = seconds % 60;
            return `${mins}:${secs.toString().padStart(2, '0')}`;
        }

        function updateClockDisplay() {
            document.getElementById('gameClock').textContent = formatTime(clockSeconds);
            document.getElementById('periodDisplay').textContent = periodNames[currentPeriod] || 'Game';
            
            // One minute warning
            if (clockSeconds === 60 && !oneMinuteWarningPlayed) {
                playClockSound();
                oneMinuteWarningPlayed = true;
            }
        }

        function startClock() {
            if (clockInterval) return;
            document.getElementById('startBtn').disabled = true;
            document.getElementById('stopBtn').disabled = false;
            
            // Pause music when clock starts
            pausePlayback();
            
            // Show faceoff modal
            showModal('faceoffModal');
            updateFaceoffPlayerGrid();
            
            clockInterval = setInterval(() => {
                if (clockSeconds > 0) {
                    clockSeconds--;
                    updateClockDisplay();
                    updatePenaltyTimers();
                } else {
                    stopClock();
                    if (currentPeriod < periodNames.length - 1) {
                        addLogEntry(`End of ${periodNames[currentPeriod]}`);
                    }
                }
            }, 1000);
        }

        function stopClock() {
            if (clockInterval) {
                clearInterval(clockInterval);
                clockInterval = null;
            }
            document.getElementById('startBtn').disabled = false;
            document.getElementById('stopBtn').disabled = true;
            
            // Show stoppage modal
            showModal('stoppageModal');
        }

        function resetClock() {
            stopClock();
            closeModal('stoppageModal');
            if (currentPeriod === 0) clockSeconds = warmupLength * 60;
            else if (currentPeriod % 2 === 1) clockSeconds = periodLength * 60;
            else clockSeconds = intermissionLength * 60;
            oneMinuteWarningPlayed = false;
            updateClockDisplay();
        }

        function nextPeriod() {
            stopClock();
            closeModal('stoppageModal');
            currentPeriod++;
            if (currentPeriod >= periodNames.length) currentPeriod = periodNames.length - 1;
            resetClock();
            addLogEntry(`Starting ${periodNames[currentPeriod]}`);
        }

        // Penalty timer management
        function updatePenaltyTimers() {
            ['home', 'away'].forEach(team => {
                const container = document.getElementById(`${team}Penalties`);
                container.innerHTML = '';
                penalties[team] = penalties[team].filter(p => p.seconds > 0);
                penalties[team].forEach(p => {
                    p.seconds--;
                    if (p.seconds === 0) {
                        playMushroomSound();
                        addLogEntry(`Penalty expired: ${p.player} (${team})`);
                    } else {
                        container.innerHTML += `<div class="penalty-timer">${formatTime(p.seconds)}</div><div class="penalty-player">#${p.player}</div>`;
                    }
                });
            });
        }

        // Goal recording
        function recordGoal(team) {
            currentGoalTeam = team;
            document.getElementById('goalModalTitle').textContent = team === 'home' ? 'ü•Ö Home Goal' : 'ü•Ö Away Goal';
            populatePlayerGrid('scorerGrid', team === 'home' ? homeRoster : awayRoster, 'scorer');
            populatePlayerGrid('assist1Grid', team === 'home' ? homeRoster : awayRoster, 'assist1');
            populatePlayerGrid('assist2Grid', team === 'home' ? homeRoster : awayRoster, 'assist2');
            showModal('goalModal');
            
            if (team === 'home') playGoalHorn();
        }

        function populatePlayerGrid(gridId, roster, type) {
            const grid = document.getElementById(gridId);
            grid.innerHTML = '<button class="player-btn" onclick="selectPlayer(\'' + type + '\', null, this)">None</button>';
            Object.entries(roster).sort((a,b) => parseInt(a[0]) - parseInt(b[0])).forEach(([num, name]) => {
                grid.innerHTML += `<button class="player-btn" onclick="selectPlayer('${type}', '${num}', this)">#${num}<br>${name}</button>`;
            });
        }

        function selectPlayer(type, number, btn) {
            const grid = btn.parentElement;
            grid.querySelectorAll('.player-btn').forEach(b => b.classList.remove('selected'));
            btn.classList.add('selected');
            if (type === 'scorer') selectedScorer = number;
            else if (type === 'assist1') selectedAssist1 = number;
            else if (type === 'assist2') selectedAssist2 = number;
            else if (type === 'penalty') selectedPenaltyPlayer = number;
            else if (type === 'faceoff') selectedFaceoffPlayer = number;
        }

        function submitGoal() {
            if (!selectedScorer) { alert('Please select a scoring player'); return; }
            
            const roster = currentGoalTeam === 'home' ? homeRoster : awayRoster;
            const goalData = {
                team: currentGoalTeam,
                period: currentPeriod,
                time: formatTime(clockSeconds),
                player: `#${selectedScorer} ${roster[selectedScorer]}`,
                assist1: selectedAssist1 ? `#${selectedAssist1} ${roster[selectedAssist1]}` : '',
                assist2: selectedAssist2 ? `#${selectedAssist2} ${roster[selectedAssist2]}` : '',
                type: document.getElementById('goalType').value
            };
            
            if (currentGoalTeam === 'home') homeScore++;
            else awayScore++;
            
            updateScoreboard();
            addLogEntry(`GOAL! ${goalData.player} (${currentGoalTeam}) - ${goalData.type}`);
            saveGameEvent('goal', goalData);
            
            closeModal('goalModal');
            selectedScorer = selectedAssist1 = selectedAssist2 = null;
        }

        // Penalty recording
        function recordPenalty() {
            updatePenaltyPlayerGrid();
            showModal('penaltyModal');
        }

        function updatePenaltyPlayerGrid() {
            const team = document.getElementById('penaltyTeam').value;
            populatePlayerGrid('penaltyPlayerGrid', team === 'home' ? homeRoster : awayRoster, 'penalty');
        }

        function submitPenalty() {
            if (!selectedPenaltyPlayer) { alert('Please select a player'); return; }
            
            const team = document.getElementById('penaltyTeam').value;
            const roster = team === 'home' ? homeRoster : awayRoster;
            const minutes = parseInt(document.getElementById('penaltyMinutes').value);
            const infraction = document.getElementById('penaltyInfraction').value;
            
            const penaltyData = {
                team: team,
                period: currentPeriod,
                time: formatTime(clockSeconds),
                player: `#${selectedPenaltyPlayer} ${roster[selectedPenaltyPlayer]}`,
                infraction: infraction,
                minutes: minutes,
                type: minutes === 2 ? 'Minor' : minutes === 5 ? 'Major' : 'Other'
            };
            
            penalties[team].push({ player: selectedPenaltyPlayer, seconds: minutes * 60 });
            
            addLogEntry(`PENALTY: ${penaltyData.player} (${team}) - ${minutes} min for ${infraction}`);
            saveGameEvent('penalty', penaltyData);
            playFromPlaylist(penaltyPlaylistId);
            
            closeModal('penaltyModal');
            selectedPenaltyPlayer = null;
        }

        // Faceoff recording
        function recordFaceoff() {
            updateFaceoffPlayerGrid();
            showModal('faceoffModal');
        }

        function updateFaceoffPlayerGrid() {
            const team = document.getElementById('faceoffWinner').value;
            populatePlayerGrid('faceoffPlayerGrid', team === 'home' ? homeRoster : awayRoster, 'faceoff');
        }

        function submitFaceoff() {
            const team = document.getElementById('faceoffWinner').value;
            const roster = team === 'home' ? homeRoster : awayRoster;
            const player = selectedFaceoffPlayer ? `#${selectedFaceoffPlayer} ${roster[selectedFaceoffPlayer]}` : 'Unknown';
            
            addLogEntry(`Face-off won: ${player} (${team})`);
            closeModal('faceoffModal');
            selectedFaceoffPlayer = null;
        }

        // Stoppage handling
        function handleStoppage(type) {
            closeModal('stoppageModal');
            switch(type) {
                case 'homeGoal': recordGoal('home'); break;
                case 'awayGoal': recordGoal('away'); break;
                case 'penalty': recordPenalty(); break;
                case 'offside': playSituation('offside'); break;
                case 'icing': playSituation('icing'); break;
                default: break;
            }
        }

        function playSituation(situation) {
            addLogEntry(`Stoppage: ${situation}`);
        }

        // UI updates
        function updateScoreboard() {
            document.getElementById('homeScore').textContent = homeScore;
            document.getElementById('awayScore').textContent = awayScore;
        }

        function addLogEntry(text) {
            const time = formatTime(clockSeconds);
            const period = periodNames[currentPeriod] || 'Game';
            gameLog.unshift({ time, period, text });
            
            const container = document.getElementById('gameLogEntries');
            container.innerHTML = gameLog.map(e => 
                `<div class="log-entry"><span class="log-time">${e.period} ${e.time}</span><span class="log-event">${e.text}</span></div>`
            ).join('');
        }

        // Sound functions
        async function playGoalHorn() {
            goalHornAudio.currentTime = 0;
            await goalHornAudio.play();
        }
        async function playMushroomSound() {
            mushroomAudio.currentTime = 0;
            await mushroomAudio.play();
        }
        async function playClockSound() {
            clockAudio.currentTime = 0;
            await clockAudio.play();
        }
        async function playTromboneSound() {
            tromboneAudio.currentTime = 0;
            await tromboneAudio.play();
        }

        async function playFromPlaylist(playlistId) {
            if (!playlistId || !playlistTracks[playlistId]) return;
            const tracks = playlistTracks[playlistId];
            if (tracks.length === 0) return;
            const track = tracks[Math.floor(Math.random() * tracks.length)];
            
            await fetch(`https://api.spotify.com/v1/me/player/play?device_id=${deviceId}`, {
                method: 'PUT',
                headers: { 'Authorization': `Bearer ${accessToken}`, 'Content-Type': 'application/json' },
                body: JSON.stringify({ uris: [track.uri] })
            });
        }

        async function pausePlayback() {
            if (deviceId) {
                await fetch(`https://api.spotify.com/v1/me/player/pause?device_id=${deviceId}`, {
                    method: 'PUT',
                    headers: { 'Authorization': `Bearer ${accessToken}` }
                });
            }
        }

        // Modal functions
        function showModal(id) { document.getElementById(id).style.display = 'block'; }
        function closeModal(id) { document.getElementById(id).style.display = 'none'; }

        // Game data
        async function saveGameEvent(type, data) {
            await fetch('/Home/SaveGameEvent', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ eventType: type, eventData: data })
            });
        }

        function exportGame(format) {
            window.location.href = `/Home/ExportGameData?format=${format}`;
        }

        async function resetGame() {
            if (!confirm('Are you sure you want to start a new game? All data will be lost.')) return;
            await fetch('/Home/ResetGameData', { method: 'POST' });
            homeScore = awayScore = 0;
            currentPeriod = 0;
            gameLog = [];
            penalties = { home: [], away: [] };
            updateScoreboard();
            resetClock();
            document.getElementById('gameLogEntries').innerHTML = '';
            document.getElementById('homePenalties').innerHTML = '';
            document.getElementById('awayPenalties').innerHTML = '';
        }

        // Search functions
        async function searchSpotify() {
            const query = document.getElementById('searchInput').value.trim();
            if (!query) return;
            
            const response = await fetch('/Home/SearchSpotify', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `query=${encodeURIComponent(query)}`
            });
            const data = await response.json();
            
            if (data.success) {
                const container = document.getElementById('searchResults');
                container.innerHTML = data.tracks.map(t => 
                    `<div class="queue-item"><span>${escapeHtml(t.name)} - ${escapeHtml(t.artist)}</span><button class="action-btn" style="padding:5px 10px" onclick="addToQueue('${t.id}','${escapeHtml(t.name)}','${escapeHtml(t.artist)}','${t.uri}')">Add</button></div>`
                ).join('');
            }
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML.replace(/'/g, "\\'");
        }

        async function addToQueue(id, name, artist, uri) {
            await fetch('/Home/AddToPriorityQueue', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `trackId=${id}&trackName=${encodeURIComponent(name)}&trackArtist=${encodeURIComponent(artist)}&trackUri=${uri}`
            });
            priorityQueue.push({ id, name, artist, uri });
            updateQueueDisplay();
        }

        function updateQueueDisplay() {
            const container = document.getElementById('queueList');
            container.innerHTML = priorityQueue.map((t, i) => 
                `<div class="queue-item"><span>${i+1}. ${escapeHtml(t.name)} - ${escapeHtml(t.artist)}</span><button class="remove-btn" onclick="removeFromQueue('${t.id}')">Remove</button></div>`
            ).join('') || '<p style="text-align:center;color:rgba(255,255,255,0.6)">Queue empty</p>';
        }

        async function removeFromQueue(id) {
            await fetch('/Home/RemoveFromPriorityQueue', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `trackId=${id}`
            });
            priorityQueue = priorityQueue.filter(t => t.id !== id);
            updateQueueDisplay();
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            updateClockDisplay();
            updateQueueDisplay();
            document.getElementById('searchInput').addEventListener('keypress', e => {
                if (e.key === 'Enter') searchSpotify();
            });
        });

        // Close modal on outside click
        window.onclick = function(e) {
            ['goalModal', 'penaltyModal', 'faceoffModal', 'stoppageModal'].forEach(id => {
                if (e.target === document.getElementById(id)) closeModal(id);
            });
        };
    </script>
